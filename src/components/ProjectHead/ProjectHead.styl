.c-about-header
  background-position: center
  background-repeat: no-repeat
  background-size: cover
  width: 100%
  min-height (550/rfs)rem
  position relative
  background-color: black
  display: flex
  align-items: center

  .about-mask
    background rgba(0,0,0,0.42)
    width: 100%
    height: 100%
    position absolute
    top 0px
    bottom (0/rfs)rem

  .about-text-block
    define-container()
    padding-right: (368/rfs)rem
    max-width: (1136/rfs)rem
    margin: 0 auto
    box-sizing: border-box
    padding-top: (50/rfs)rem !important
    padding-bottom: (50/rfs)rem !important
    box-sizing: border-box

    +below(826px)
      padding: 0 (32/rfs)rem
      padding-bottom: (50/rfs)rem !important

    .about-project
      define-font(museo, (15/rfs)rem, white, 1.6, bold, 1px)
      text-transform uppercase
      position relative
      z-index 2
      display block
      //padding-top (132/rfs)rem
      +below(mobile_max)
        padding-top (60/rfs)rem
        width: 100%

    .about-project-text
      define-font(museo, (50/rfs)rem, white, 1.28, bold)
      position relative
      z-index: 2
      margin-top (5/rfs)rem
      +below(480px)
        define-font(museo, (40/hrfs)rem, white, 1.28, bold)
      +below(400px)
        define-font(museo, (30/hrfs)rem, white, 1.28, bold)
        word-break: break-all

    .about-project-rating
      cursor: help
      margin-top (10/rfs)rem
      background #f59800
      position relative
      z-index 2
      width: 100px
      padding 10px 0 10px 13px
      position relative
      .rating-title
        define-font(museo, 11px, white, normal, normal)
        display  block
        text-transform uppercase
      .rating
        define-font(museo, 18px, white, normal, bold)
        display  block
        text-transform uppercase

      .question
        position absolute
        top (8.25/rfs)rem
        right (9/rfs)rem
