.admin-home-root
  width 100%
  border-bottom (1/rfs)rem solid #eaeaea

  .admin-top-bar
    display flex
    justify-content space-between
    padding (12/rfs)rem 0px
    border-bottom (1/rfs)rem solid #eaeaea

    .left-side
      margin auto 0px
      padding-left (16/rfs)rem
      .currency-info
        display inline-block
        vertical-align middle
        margin-right (33/rfs)rem

        .country-flag
          display inline-block
          vertical-align middle
          width (24/rfs)rem
          height (24/rfs)rem
          overflow hidden
          position relative
          border-radius (12/rfs)rem
          margin-right (11.5/rfs)rem

        .country-name
          define-font(museo, (15/rfs)rem, #4a4a4a, normal, bold, 0.4px)
          display inline-block
          vertical-align middle
          margin-right (12.5/rfs)rem
          text-transform uppercase

        .country-money
          define-font(museo, (15/rfs)rem, #4a4a4a, normal, normal, 0.4px)
          display inline-block
          vertical-align middle
          margin-right (4/rfs)rem

        .green-triangle
          triangle((8/rfs)rem, (10/rfs)rem, top, color = #7ed321)
          display inline-block
          vertical-align middle

        .red-triangle
          triangle((8/rfs)rem, (10/rfs)rem, bottom, color = #f64300)
          display inline-block
          vertical-align middle

      .currency-info:last-child
        margin-right 0px

    .right-side
      margin auto 0px
      padding-right (76/rfs)rem

      .avatar
        width (48/rfs)rem
        height (48/rfs)rem
        position relative
        overflow hidden
        border-radius (24/rfs)rem
        display inline-block
        vertical-align middle
        margin-right (12/rfs)rem
        img
          width 100%
          height 100%
          object-fit cover

      .notification
        display inline-block
        vertical-align middle
        cursor pointer

  .top-content
    display flex

    +below(826px)
      flex-wrap: wrap

    .content-box
      width 33.33%
      text-align center
      padding-top (40/rfs)rem
      padding-bottom (35/rfs)rem
      border-bottom 1px solid #eaeaea

      +below(826px)
        width: 100%

      .content-title
        define-font(museo, (11/rfs)rem, #4a4a4a, normal, normal, 0.3px)
        text-transform uppercase
        display block
        margin-bottom (15/rfs)rem

      .content-money
        define-font(roboto, (48/rfs)rem, black, normal, 300)
        display block
        margin-bottom (15/rfs)rem

      .content-project
        define-font(museo, (11/rfs)rem, #9b9b9b, normal, normal, 0.3px)
        text-transform uppercase
        margin-bottom (30/rfs)rem
        display block

      .content-button
        define-font(museo, (11/rfs)rem, #1e9df2, normal, normal, 0.7px)
        text-transform uppercase
        cursor pointer
        width (230/rfs)rem
        margin 0px auto
        border-radius: 6px;
        border: solid 1px #1e9df2;
        padding (13.5/rfs)rem 0px

    .content-box:nth-child(2)
      border-left 1px solid #eaeaea
      border-right 1px solid #eaeaea

  .bottom-content
    display flex

    +below(826px)
      flex-wrap: wrap

    .statistic
      width 33.33%
      border-right 1px solid #eaeaea
      text-align center
      padding (40/rfs)rem 0px (52/rfs)rem

      +below(826px)
        width: 100%

      .content-title
        define-font(museo, (11/rfs)rem, #4a4a4a, normal, normal, 0.3px)
        text-transform uppercase
        display block
        margin-bottom (9/rfs)rem

      .statistic-info
        margin (13/rfs)rem 0px (60/rfs)rem
        display block

        .circle
          width (14/rfs)rem
          height (14/rfs)rem
          background #1e9df2
          border-radius (7/rfs)rem
          overflow hidden
          display inline-block
          vertical-align middle
          position: relative
          left: (-9/rfs)rem

        .statistic-text
          width (153/rfs)rem
          define-font(museo, (12/rfs)rem, #4a4a4a, normal, normal, 0.3px)
          display inline-block
          vertical-align middle

      .statistic-navigation
        display inline-block
        vertical-align top
        margin-right (8/rfs)rem
        cursor pointer
        text-align center
        .statistic-button-wrapper
          height 49px
          position relative
          overflow hidden
          .statistic-button
            display block
            position relative
            top -54px
          .statistic-button-active
            top 0px

        .point
          margin (5/rfs)rem auto 0px
          width (4/rfs)rem
          height (4/rfs)rem
          border: 1px solid #1e9df2;
          border-radius (2/rfs)rem
        .point-active
          background #1e9df2
      .statistic-navigation:last-child
        margin-right 0px

    .forecast
      width 66.77%
      text-align center
      padding (36/rfs)rem 0px (52/rfs)rem

      +below(826px)
        width: 100%

      .content-title
        define-font(museo, (11/rfs)rem, #4a4a4a, normal, normal, 0.3px)
        text-transform uppercase
        display block
        margin-bottom (23/rfs)rem
        span
          define-font(museo, (16/rfs)rem, #1e9df2, normal, 1.13, 0.4px)

      .forecast-money
        define-font(roboto, (48/rfs)rem, black, normal, 300)
        display block
        text-align left
        padding-left (26/rfs)rem

  .donut-chart-wrapper
    text
      define-font(roboto, 22px, black, normal)

  .project-info-tooltip
    position: absolute
    text-align: left
    left: 0
    top: 0
    background-color: tundora
    border-radius: 3px
    padding: 15px
    max-width: 200px
    box-shadow: 0 10px 20px 0 rgba(73, 73, 73, 0.5);
    opacity: 0
    transition: left 0.4s, top 0.4s, opacity 0.2s linear 0.2s;
    pointer-events: none;

    &.show
      opacity: 1

    .sum
      define-font(museo, 10px, white)

    .circle
      display: inline-block
      width: 4px
      height: 4px
      margin-right: 8px
      border-radius: 50%
      vertical-align: middle

    .name
      define-font(museo, 11px, white, normal, bold)
      margin-top: 12px
      display: inline-block

  .sum-line
    width: 100%
    height: 1px
    position: absolute
    opacity: 0
    transition: opacity 0.2s
    pointer-events: none;

    &.show
      opacity: 1

    .sum-line-container
      width: 100%
      height: 1px
      display: inline-block
      background-color: black
      position: absolute
      top: 0
      left: 0

    .sum-line-text-wrapper
      position: absolute
      right: 0
      display: inline-block
      width: 1px
      height: 1px

    .sum-line-text
      position: absolute
      left: 0
      top: -10px
      white-space: nowrap
      padding: 5px 9px
      define-font(museo, 10px, white)
      background-color: tundora
      border-radius: 3px

      +below(940px)
        left: -5px
        padding: 5px 3px

  .barchart-wrapper
    position: relative
    display: inline-block
    text-align: center

    svg {
      font: 10px sans-serif;
      shape-rendering: crispEdges;
    }

    .y-axis-line {
      stroke: cornflower
    }

    .axis path,
    .axis line {
      fill: none;
      stroke: alto;
    }

    path.domain {
      stroke: none;
    }

    .y .tick line {
      stroke: cornflower;
    }

    .x, .y .tick text {
      define-font(museo, 10px, gray)
      fill: gray
    }

    .y .tick text {
      text-transform: none
      transform: translateX(7px);
    }

    .x .tick text {
      text-transform: capitalize
      transform: translateX(-5px) rotate(-37deg);
    }