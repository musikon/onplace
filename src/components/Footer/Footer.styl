.c-footer
  background #1c1e1f
  padding-bottom (47/rfs)rem
  position relative

  .footer-content
    define-container()
    display flex
    justify-content space-between
    padding-top (71/rfs)rem

    .footer-left-side
      text-align left
      width (300/rfs)rem

      .footer-list-item
        display block
        define-font(mono, (12/rfs)rem, white, 3.75, normal, 0.5px)
        text-transform uppercase
        text-decoration none
        opacity 0.8
        transition 0.3s

      .footer-list-item:hover
        opacity 0.6

      .button-error
        margin-top (16/rfs)rem
        width (192/rfs)rem
        text-align center
        text-transform uppercase
        define-font(mono, (15/rfs)rem, #1e9df2, 1.33, normal, -0.1px)
        border-radius 3px
        border solid 1px #1e9df2
        cursor pointer
        padding (9.5/rfs)rem 0px
        box-sizing border-box
        transition 0.3s

        &:hover
          opacity 0.6

    .fotter-middle-side
      text-align center

      .middle-image
        margin-bottom (28/rfs)rem
        width (84/rfs)rem
        height (84/rfs)rem

      .middle-title
        define-font(mono, (12/rfs)rem, white, 1.67, normal, 0.3px)
        opacity 0.8
        text-transform uppercase
        margin-bottom (10/rfs)rem

      .middle-text
        width (355/rfs)rem
        define-font(mono, (11/rfs)rem, white, 1.82, normal, -0.1px)
        opacity 0.5
        margin-bottom (70/rfs)rem

    .footer-right-side
      text-align right
      width (300/rfs)rem

      .pay-icon-container
        display flex
        justify-content space-between
        width (245/rfs)rem
        margin-left (55/rfs)rem

        .pay-icon
          margin auto 0px
          height (28/rfs)rem
          img
            object-fit cover
            height 100%

  .footer-bottom
    display flex
    justify-content space-between
    define-container()
    margin-top (55/rfs)rem


    .copywriting
      width (300/rfs)rem
      define-font(mono, (15/rfs)rem, white, 1.33, normal, -0.1px)
      margin auto 0px
      opacity 0.5

    .socials-icons-container
      width (187/rfs)rem
      display flex
      justify-content space-between
      margin auto auto

    .socials-icons-absolute
      position absolute
      top (80/rfs)rem
      left 0px
      right 0px
      margin auto

      .social-icon:hover
        transition 0.3s
        opacity 0.6

    .r-m-logo
      display block
      width (300/rfs)rem
      text-align right
      margin auto 0px
      img
        height: (38/rfs)rem
