      content: ''
      display: block
      position: absolute
      width: 999rem
      top: 0
      bottom: 0
      left: calc(-999rem + 1px)
      background: orange
      box-shadow: 0 (20/rfs)rem (30/rfs)rem 0 rgba(245, 152, 0, 0.5)
      +below(480px)
        display: none

    .divider
      display: flex
      height: 100%
      width: auto
      position: absolute
      left: (-15/rfs)rem
      top: 0
      +below(480px)
