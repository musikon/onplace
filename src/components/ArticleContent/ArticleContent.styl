        define-font(museo, (24/rfs)rem, white, 1.5, normal)
        padding-right: (100/rfs)rem
        //margin-left:  (95/rfs)rem
        padding-bottom: (15/rfs)rem
        position: relative
        color: blue
        +below(826px)
          margin-left:  (95/rfs)rem
          padding-right: (50/rfs)rem
          padding-bottom: (30/rfs)rem

      .author-container
        padding-right: (20/rfs)rem
        width: (255/rfs)rem
        justify-content: flex-end
        align-items: flex-end
        +below(826px)
          justify-conten: center
          align-items: center

        .author-name
          define-font(museo, (15/rfs)rem, white, 1.6, 700, (1/rfs)rem)
          text-transform: uppercase
          padding-bottom: (4/rfs)rem

        .author-position
          define-font(museo, (12/rfs)rem, white, 1.5, regular)

  .article-content-list
    margin-bottom: (20/rfs)rem

    ul
      padding-left: (110/rfs)rem
      +below(480px)
        padding-left: (50/rfs)rem
      li
        display: flex
        define-font(conqSans, (20/rfs)rem , black, 1.7, 300, (0/rfs)rem )
        margin-bottom: (15/rfs)rem
        position: relative

        &:before
          content: ''
          display: block
          position: absolute
          width: (6/rfs)rem
          height: (6/rfs)rem
          border-radius: 50%
          background: blue
          left: (-20/rfs)rem
          top: (10/rfs)rem

  .article-content-video
    position: relative
    height: auto
    margin-bottom: (60/rfs)rem

    // container under iframe
    div
      width: 41.125rem !important
      height: 23.125rem !important

      +below(826px)
        width: 100% !important
        height: auto !important

  .article-content-table
    margin-top: (50/rfs)rem
    margin-bottom: (80/rfs)rem

    thead
      tr
        th
          define-font(museo, (13/rfs)rem , black, 1, bold)
          opacity: 0.42
          padding: (15/rfs)rem (20/rfs)rem (15/rfs)rem (0/rfs)rem
          vertical-align: middle
          text-align: left
          +below(480px)
            padding: (15/hrfs)rem (20/hrfs)rem (15/hrfs)rem (0/hrfs)rem

    tbody
      tr
        td
          border-top: (1/rfs)rem solid rgba(0, 0, 0, 0.1)
          padding: (15/rfs)rem (20/rfs)rem (15/rfs)rem (0/rfs)rem
          define-font(museo, (13/rfs)rem , black, 1.1, normal)
          vertical-align: middle

          a
            color: blue
            text-decoration: none
            cursor: pointer
            transition: 0.25s ease;

            &:hover
              color: darken(blue, 10)
              text-decoration: underline;

          &:first-child
            width: 55%
            padding: (15/rfs)rem (130/rfs)rem (15/rfs)rem (0/rfs)rem
            +below(480px)
              padding: (15/hrfs)rem (20/hrfs)rem (15/hrfs)rem (0/hrfs)rem
              word-break: break-all

          &:nth-child(2n)
            width: 30%
            padding: (15/rfs)rem (0/rfs)rem (15/rfs)rem (0/rfs)rem

          &:nth-child(3n)
            width: 15%
            text-align: left
            vertical-align: middle

          &:last-child
            padding: (15/rfs)rem (0/rfs)rem (15/rfs)rem (0/rfs)rem
  .article-content-big-quote-left-side
    padding-left: 1px;
    background: green
    display: flex
    align-items: center
    padding: (20/rfs)rem (50/rfs)rem (20/rfs)rem (20/rfs)rem
    box-shadow: 0 (20/rfs)rem (30/rfs)rem 0 rgba(125, 211, 32, 0.5)
    position: relative
    margin-bottom: (70/rfs)rem
    flex-wrap: wrap
    +below(480px)
