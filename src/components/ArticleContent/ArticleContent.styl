            define-font(museo, (70/rfs)rem , white, 1, 700 )

  .article-content-blue-quote-wrapper
    padding: (35/rfs)rem 0 (42/rfs)rem 0
    margin-top: (35/rfs)rem
    margin-bottom: (40/rfs)rem
    +below(826px)
      padding: (50/rfs)rem 0 (50/rfs)rem 0

    .article-content-blue-quote
      box-sizing: border-box
      define-container((950/rfs)rem)
      display: flex
      flex-direction: column
      align-items: flex-end

