        transform: rotate(90deg)
        top: (-18/rfs)rem
        left: 0


      path
        fill: orange;
        stroke: rgba(255,255,255, 1);
        stroke-width: 0.5px;

      path.orange
        stroke: orange !important
        height: (2/rfs)rem

