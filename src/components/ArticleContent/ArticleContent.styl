      width: 999rem
      top: 0
      bottom: 0
      left: calc(-999rem + 1px)
      background: green
      box-shadow: 0 (20/rfs)rem (30/rfs)rem 0 rgba(125, 211, 32, 0.5)
      +below(480px)
        box-shadow: 0 (20/hrfs)rem (30/hrfs)rem 0 rgba(125, 211, 32, 0.5)
        display: none

    .title
      define-font(museo, (22/rfs)rem , white, 1.55, bold )
      width: 100%
      margin-right: (30/rfs)rem
      flex: 0 1 auto
      +below(480px)
        margin-right: (0/hrfs)rem
        text-align: center
        margin-bottom: (10/hrfs)rem
    .bigLetter
      define-font(conqSans, (156/rfs)rem , white, 1em , 300 )
      margin-right: (20/rfs)rem
      display: block
      position: relative;
      top: 1rem;
      flex: 1 1 auto
      +below(480px)
        define-font(conqSans, (156/hrfs)rem , white, initial , 300 )
        height: auto
        margin-right: (0/hrfs)rem
        margin-bottom: (10/hrfs)rem
    .smallLetter
      define-font(museo, (36/rfs)rem , white, 1, bold, (1.7/rfs)rem )
      flex: 1 1 auto

