      .title
        define-font(museo, (20/rfs)rem , black, 1.3, bold)
        +below(480px)
          define-font(museo, (20/hrfs)rem , black, 1.3, bold)
          padding-top: (20/rfs)rem

      .numb-container
        display: flex
        align-items: center
        flex-wrap: wrap;
