.c-article-content
  +below(825px)
    padding: 0 (16/rfs)rem

  .g-article-page-title
    define-font(museo, (24/rfs)rem , black, 1.5, bold)
    margin-bottom: (35/rfs)rem

    &:before
      display: block
      content: ''
      width: (64/rfs)rem
      height: (3/rfs)rem
      background-color: #1f9df1
      position: relative
      top: (-11/rfs)rem
      left: (-2/rfs)rem

  .article-page-title
    define-font(museo, (34/rfs)rem , black, 1.06, bold)
    margin-bottom: (30/rfs)rem
    margin-top: (55/rfs)rem

  .article-content-image-container
    margin-bottom: (45/rfs)rem

    .image
      width: (656/rfs)rem
      height: auto
      margin-bottom: (25/rfs)rem
      +below(826px)
        width: 100%
        height: auto

    .image-description
      define-font(museo, (15/rfs)rem , black, 1.6, weight = normal)

    .image-author
      define-font(museo, (12/rfs)rem , middleGray, 2)

  .article-content__simple-image-container
    margin-bottom: (60/rfs)rem
    .image
      width: 100%
      height: auto

  .article-content-text
    define-font(conqSans, (20/rfs)rem , black, 1.7, 300, (0.05/rfs)rem )
    margin-bottom: (40/rfs)rem

    strong
      font-weight bold

    &.info-after-indicators
      position: relative
      top: (-15/rfs)rem

    a
      color: blue
      text-decoration: none
      cursor: pointer
      transition: 0.25s ease;
      &:hover
        color: darken(blue, 10)
        text-decoration: underline;

  .article-page-h3
    define-font(museo, (34/rfs)rem , black, 1.06, bold, (0.5/rfs)rem )
    margin-top: (45/rfs)rem
    margin-bottom: (30/rfs)rem

  .article-content-quote
    define-font(conqSans, (20/rfs)rem , black, 1.7, 300, (1/rfs)rem )
    margin-bottom: (25/rfs)rem

    &.bold
      define-font(museo, (20/rfs)rem , black, 1.7, 700, (1/rfs)rem )

    &.bold-quote
      define-font(museo, (20/rfs)rem , black, 1.7, bold )

      &:before
        display: inline-block
        content: ' - '
        define-font(museo, (20/rfs)rem , black, 1.7, bold)
        margin-right: (13/rfs)rem

    &:before
      display: inline-block
      content: ' - '
      define-font(museo, (20/rfs)rem , black, 1.7, normal )
      margin-right: (13/rfs)rem


  .article-content-big-quote-wrapper
