.c-simple-title
  define-container((1280/rfs)rem)
  //position: relative
  padding: 0px (70/rfs)rem;
  box-sizing: border-box;


  .simple-title-date
    opacity: 0.5
    define-font(museo, (14/rfs)rem, white, 1.14, normal, 0.5)
    line-height: 1.14
    letter-spacing: 0.5px
    margin-bottom: (5/rfs)rem

  .simple-title-title
    define-font(museo, (50/rfs)rem, white, 1.28, bold)
    margin-bottom: (10/rfs)rem

  .simple-title-name
    define-font(museo, (15/rfs)rem, white, 1.6, normal, 1px)
    text-transform: uppercase

  .simple-title-share-icon
    width: (56/rfs)rem;
    height: (56/rfs)rem;
    background-color: white;
    box-shadow: 0 (2/rfs)rem (6/rfs)rem 0 rgba(0, 0, 0, 0.5);
    border-radius: 50%
    display: flex
    vertical-align: center
    justify-content: center
    position: absolute
    bottom: (-97/rfs)rem
    right: (85/rfs)rem
